<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Car" parent="@style/CarAppTheme" tools:ignore="PrivateResource" />

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/lightPurple</item>
    </style>

    <style name="Radio_button_first_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/btcolor16</item>
        <item name="android:textSize">50px</item>
        <item name="android:layout_marginTop">8px</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    <style name="Radio_button_three_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/btcolor16</item>
        <item name="android:textSize">50px</item>
    </style>

    <style name="Radio_button_second_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/btcolor17</item>
        <item name="android:textSize">20px</item>
        <item name="android:layout_marginBottom">15px</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/push_right_in</item>
        <!--<item name="android:activityOpenExitAnimation">@anim/push_left_out</item>-->
        <!--<item name="android:activityCloseEnterAnimation">@anim/push_left_in</item>-->
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
    </style>
    <style name="windowAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_left</item>
        <!--<item name="android:activityOpenExitAnimation">@anim/push_left_out</item>-->
        <!--<item name="android:activityCloseEnterAnimation">@anim/push_left_in</item>-->
        <item name="android:windowExitAnimation">@anim/out_to_left</item>
    </style>

